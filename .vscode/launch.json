    "version": "0.2.0",
    "configurations": [
        {
            "name": "Deno: Attach",
            "port": 9229,
            "request": "attach",
            "type": "pwa-node"
        },
        {
            "name": "Deno: Run",
            "request": "launch",
            "type": "pwa-node",
            "program": "main.ts",
            "outputCapture": "std",
            "console": "integratedTerminal",
            "internalConsoleOptions": "openOnSessionStart",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "deno",
            "runtimeArgs": [
                "run",
                "--inspect",
                "--allow-all",
                "--unstable"
            ],
            "attachSimplePort": 9229
        }
    ]
}